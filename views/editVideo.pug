extends layouts/main.pug

block content
    .form-container
        form(action=`/videos${routes.editVideo}`, method="post")
            input(type="text", name="title" placeholder="Title")
            textarea(type="description", placeholder="Description")
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delate(href=`/videos${routes.deleteVideo}`) Delete Video
